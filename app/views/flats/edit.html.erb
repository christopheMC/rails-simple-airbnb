<div class="container">
  <div class="row">
    <div class="col-6">
      <%= simple_form_for(@flat) do|f| %>
        <%= f.input :name %>
        <%= f.input :address %>
        <%= f.input :description %>
        <%= f.select :number_of_guests, [1, 2, 3, 4, 5] %>
        <%= f.input :price_per_night %>
        <%= f.submit class: "btn btn-success" %>
      <% end %>
    </div>
  </div>
</div>
