<div class="d-flex border-bottom justify-content-between align-items-center header">
  <h4 class="ml-2">Simple Airbnb</h4>
  <%= link_to "Add Flat", new_flat_path, class: "btn btn-primary m-2" %>
</div>
<div class="container">
  <div class="row">
    <div class="col-12">
      <h1>All our flats (<%= @flats.count %>)</h1>
      <div class="d-flex justify-content-around flex-wrap present">
        <% @flats.each do |flat| %>
          <%= link_to flat_path(flat) do %>
            <div class="card">
              <div class="card-info">
                <img src="https://source.unsplash.com/300x200/?house" alt="">
                <h3 class="pl-2"><%= flat.name %></h3>
                <p class="pl-2"><%= flat.address %></p>
              </div>
              <div class="d-flex align-content-end pl-2 info">
                <p class="mr-3"><i class="fas fa-user-friends"> </i><%= flat.number_of_guests %></p>
                <p><i class="fas fa-euro-sign"> </i><%= flat.price_per_night %></p>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
