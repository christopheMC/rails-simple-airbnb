<div class="navbar d-flex border-bottom align-items-center header">
  <h4 class="ml-2">Simple Airbnb</h4>
  <%= link_to "Add Flat", new_flat_path, class: "btn btn-success m-2" %>
</div>
<div class="main-container-bis">
  <div class="main-container">
    <div class="title">
      <h1>Our flats (<%= @flats.count %>)</h1>
    </div>
    <div class="cards">
      <% @flats.each do |flat| %>
        <%= link_to flat_path(flat) do %>
          <div class="card">
            <div class="card-info">
              <img src="https://source.unsplash.com/300x200/?house" alt="">
              <h3 class="pl-2"><%= flat.name %></h3>
              <p class="pl-2"><%= flat.address %></p>
            </div>
            <div class="d-flex align-content-end pl-2 info">
              <p class="mr-3"><i class="fas fa-user-friends"> </i><%= flat.number_of_guests %></p>
              <p><i class="fas fa-euro-sign"> </i><%= flat.price_per_night %></p>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
  <div id='map' style='width: 500px'></div>
</div>
<script>
mapboxgl.accessToken = 'pk.eyJ1Ijoia3Jpc3Byb2xjZSIsImEiOiJjazlsYW4xeXkwMnN0M2hzMXo2M2d1MHpsIn0.HXJ2L8en80eBxzQh-V8cYw';
var map = new mapboxgl.Map({
container: 'map',
style: 'mapbox://styles/mapbox/streets-v11',
center: [2.35, 48.88], // starting position
  zoom: 10
});
map.addControl(new mapboxgl.NavigationControl());
</script>
